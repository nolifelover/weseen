<h1>Listing issues</h1>

<table>
  <tr>
    <th>Fullname</th>
    <th>Mobile</th>
    <th>Email</th>
    <th>Place</th>
    <th>Time</th>
    <th>Detail</th>
    <th>Status</th>
    <th>Flag</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @issues.each do |issue| %>
  <tr>
    <td><%= issue.fullname %></td>
    <td><%= issue.mobile %></td>
    <td><%= issue.email %></td>
    <td><%= issue.place %></td>
    <td><%= issue.time %></td>
    <td><%= issue.detail %></td>
    <td><%= issue.status %></td>
    <td><%= issue.flag %></td>
    <td><%= link_to 'Show', issue %></td>
    <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
    <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

