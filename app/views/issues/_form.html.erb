<%= simple_form_for(@issue) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :fullname %>
    <%= f.input :mobile %>
    <%= f.input :email %>
    <%= f.input :place %>
    <%= f.input :time %>
    <%= f.input :detail %>
    <%= f.input :status %>
    <%= f.input :flag %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
