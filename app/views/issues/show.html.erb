<h1><%=t ('show') %></h1>

<div class="row" >
  <%= link_to 'Back', issues_path , class: 'span2 pull-right btn btn-block btn-inverse'%>
</div>
<br/>
<div class="row">
  <div class="span4 issue-about">

    
      <b><%=t 'issues.fullname' %> : </b>
      <%= @issue.fullname %>
    
      <br/>
    
      <b><%=t 'issues.mobile' %> : </b>
      <%= @issue.mobile %>
    <br/>

    
      <b><%=t 'issues.email' %> : </b>
      <%= @issue.email %>
    <br/>

    
      <b><%=t 'issues.place' %> : </b>
      <%= @issue.place %>
    <br/>

    
      <b><%=t 'issues.time' %> : </b>
      <%= @issue.time %>
    <br/>
    
      <b><%=t 'issues.status' %> : </b>
      <%= t("issue.status.status_" + @issue.status.to_s) %>
    
    <br/>
      <b><%=t 'issues.detail' %> : </b>
      <%= @issue.detail %>
    

    

  </div>
  <div class="span7 detail-popovers" >
    <div class="popover right">
      <div class="arrow"></div>
      <h3 class="popover-title"><%=t 'issue.progress.label' %></h3>
      <div class="popover-content">
        <p><%=t 'issue.progress.process' %></p>
        <br/>
      </div>
    </div>
</div>